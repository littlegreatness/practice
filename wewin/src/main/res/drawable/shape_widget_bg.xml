<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="#50489cfa" android:startColor="#50489cfa" />

            <stroke android:width="1dp" android:color="#50489cfa" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="#50489cfa" android:startColor="#50489cfa" />

            <stroke android:width="1dp" android:color="#50489cfa" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="@android:color/transparent" android:startColor="@android:color/transparent" />

            <stroke android:width="1dp" android:color="@android:color/transparent" />
        </shape></item>

</selector>
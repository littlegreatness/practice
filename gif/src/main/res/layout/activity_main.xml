<?xml version="1.0" encoding="utf-8"?>
<com.xiaomolongstudio.wewin.view.draglayout.DragLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cus="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/menu_layout" />

    <com.example.gif.view.MainLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.gif.view.FsgifView
            android:id="@+id/gifView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            cus:drawablevalue="@raw/dynamic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="stopGif"
                android:text="暂停动画" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="playGif"
                android:text="播放gif" />

        </LinearLayout>

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入,例如想你了,恭喜发财,该吃药了,嫁给我"
            android:singleLine="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="clear"
                android:text="清空内容" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="play"
                android:text="播放动画" />

        </LinearLayout>
    </com.example.gif.view.MainLayout>
</com.xiaomolongstudio.wewin.view.draglayout.DragLayout>

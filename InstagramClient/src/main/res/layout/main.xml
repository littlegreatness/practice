<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/post_fragment" />


    <FrameLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_contracted"
        tools:layout="@layout/header_fragment_states" />

    <FrameLayout
        android:id="@+id/fabs_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fabs_fragment" />


    <ListView
        android:id="@+id/left_drawer"
        style="@android:style/TextAppearance.Material.Inverse"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/primary"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="1dp" />

    <!--android:translationY="@dimen/header_contracted"-->


</android.support.v4.widget.DrawerLayout>


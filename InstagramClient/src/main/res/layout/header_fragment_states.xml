<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_contracted"
    android:background="@color/primary"
    android:clipToPadding="false"
    android:elevation="@dimen/header_elevation"
    android:orientation="vertical">


    <!--android:name="com.theostanton.InstagramClient.fragments.header.LowerHeaderFragment"-->
    <FrameLayout
        android:id="@+id/lower_header_fragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/footer_height"

        android:layout_alignParentBottom="true"
        tools:layout="@layout/lower_header_fragment" />

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="50dp"
        android:layout_height="@dimen/header_contracted"

        android:layout_alignParentLeft='true'
        android:layout_alignParentTop='true'
        android:background="@color/primary"
        android:scaleType="center"
        android:src="@drawable/ic_action_back" />


    <!--android:name="com.theostanton.InstagramClient.fragments.header.UpperHeaderFragment"-->
    <FrameLayout
        android:id="@+id/upper_header_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/back_button"
        tools:layout="@layout/upper_header_fragment" />


</RelativeLayout>
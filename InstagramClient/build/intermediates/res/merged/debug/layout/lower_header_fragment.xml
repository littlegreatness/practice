<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/footer_height">

    <!--button background-->

    <com.theostanton.InstagramClient.views.ButtonHeaderBackground
        android:id="@+id/header_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/footer_one"
            android:layout_width="0dp"
            android:layout_height="@dimen/footer_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:background="@color/footer_button_bg"
            android:elevation="@dimen/footer_elevation" />

        <View
            android:id="@+id/footer_two"
            android:layout_width="0dp"
            android:layout_height="@dimen/footer_height"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/footer_one"
            android:background="@color/footer_button_bg"
            android:elevation="@dimen/footer_elevation" />

        <View
            android:id="@+id/footer_three"
            android:layout_width="0dp"
            android:layout_height="@dimen/footer_height"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/footer_two"
            android:background="@color/footer_button_bg"
            android:elevation="@dimen/footer_elevation" />

        <View
            android:id="@+id/footer_four"
            android:layout_width="0dp"
            android:layout_height="@dimen/footer_height"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/footer_three"
            android:background="@color/footer_button_bg"
            android:elevation="@dimen/footer_elevation" />

        <View
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/footer_height"
            android:layout_alignParentTop="true"
            android:elevation="@dimen/footer_elevation" />


    </com.theostanton.InstagramClient.views.ButtonHeaderBackground>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/footer_height"
        android:orientation="vertical">


        <!--number footers-->

        <LinearLayout
            android:id="@+id/number_footers"
            android:layout_width="match_parent"
            android:layout_height="@dimen/footer_number_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/header_posts_number"
                style="@style/HeaderFooterNumberViews" />

            <TextView
                android:id="@+id/header_likes_number"
                style="@style/HeaderFooterNumberViews" />

            <TextView
                android:id="@+id/header_follows_number"
                style="@style/HeaderFooterNumberViews" />

            <TextView
                android:id="@+id/header_followedby_number"
                style="@style/HeaderFooterNumberViews"
                android:longClickable="false" />

        </LinearLayout>

        <!--text footers -->

        <LinearLayout
            android:id="@+id/text_footers"
            android:layout_width="match_parent"
            android:layout_height="@dimen/footer_text_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/header_posts_text"
                style="@style/HeaderFooterTextViews"
                android:text="Posts" />

            <TextView
                android:id="@+id/header_likes_text"
                style="@style/HeaderFooterTextViews"
                android:text="Likes" />

            <TextView
                android:id="@+id/header_follows_text"
                style="@style/HeaderFooterTextViews"
                android:text="Follows" />

            <TextView
                android:id="@+id/header_followedby_text"
                style="@style/HeaderFooterTextViews"
                android:text="Followers" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>